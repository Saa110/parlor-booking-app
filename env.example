# Parlor Booking App Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development

# Google Calendar API Configuration
GOOGLE_APPLICATION_CREDENTIALS=./credentials.json
GOOGLE_CALENDAR_ID=primary

# Database Configuration (if using a database)
DATABASE_URL=mongodb://localhost:27017/parlor-booking
# or
DATABASE_URL=postgresql://username:password@localhost:5432/parlor_booking

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SMS Configuration (for text notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Security
JWT_SECRET=your-jwt-secret-key
SESSION_SECRET=your-session-secret

# Business Configuration
PARLOR_NAME=Parlor Beauty
PARLOR_EMAIL=info@parlorbeauty.com
PARLOR_PHONE=(555) 123-4567
PARLOR_ADDRESS=123 Beauty St, City, State

# Business Hours (in 24-hour format)
BUSINESS_HOURS_MON_FRI_START=09:00
BUSINESS_HOURS_MON_FRI_END=19:00
BUSINESS_HOURS_SAT_START=09:00
BUSINESS_HOURS_SAT_END=18:00
BUSINESS_HOURS_SUN_START=10:00
BUSINESS_HOURS_SUN_END=16:00

# Timezone
TIMEZONE=America/New_York

# Features
ENABLE_GOOGLE_CALENDAR=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_PAYMENT_INTEGRATION=false

# Payment Configuration (if enabled)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Analytics (optional)
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
FACEBOOK_PIXEL_ID=your-facebook-pixel-id 